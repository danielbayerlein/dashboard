{
  "name": "dashboard",
  "version": "1.0.0",
  "description": "Your Team Dashboard",
  "main": "pages/index.js",
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "lint": "standard --verbose | snazzy && stylelint '**/*.js'",
    "test": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielbayerlein/dashboard.git"
  },
  "keywords": [
    "tv",
    "dashboard"
  ],
  "author": "Daniel Bayerlein",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/danielbayerlein/dashboard/issues"
  },
  "homepage": "https://github.com/danielbayerlein/dashboard#readme",
  "dependencies": {
    "babel-plugin-styled-components": "^1.1.7",
    "dotenv-webpack": "^1.5.4",
    "isomorphic-unfetch": "^2.0.0",
    "js-base64": "^2.1.9",
    "next": "^3.2.2",
    "polished": "^1.7.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "styled-components": "^2.2.0",
    "tinytime": "^0.2.6",
    "yup": "^0.22.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.0",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3",
    "stylelint": "^8.1.1",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.0.0"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "styled-components",
        {
          "ssr": true,
          "displayName": true,
          "preprocess": false
        }
      ]
    ]
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-styled-components"
    ],
    "syntax": "scss"
  }
}
